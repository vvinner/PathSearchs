<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wel_bg"
    tools:context="com.porster.gift.StartActivity">
    <ImageView
        android:id="@+id/wel_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/wel_book"/>

    <com.porster.gift.widget.PathSearch
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/pathSearch"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wel_txt"
        android:layout_alignTop="@+id/wel_book"
        android:layout_alignLeft="@+id/wel_book"
        android:layout_alignStart="@+id/wel_book"
        android:layout_margin="10dp"
        android:alpha="0.0"
        android:id="@+id/wel_txt"/>
</RelativeLayout>
